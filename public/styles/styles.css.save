// <uniquifier>: Use a unique and descriptive class name
// <weight>: Use a value from 300 to 800
.open-sans-<uniquifier> {
  font-family: "Open Sans", sans-serif;
  font-optical-sizing: auto;
  font-weight: <weight>;
  font-style: normal;
  font-variation-settings:
    "wdth" 100;
}


* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

body {
  font-family: "Open Sans", sans-serif;
/* background-color: #C7CCD5;*/
  min-height: 100vh;
  max-width: 40rem;
  margin: 0 auto;
  box-shadow: 0px 0px 25px rgba(0,0,0,0.5);
}

header {
  background-color: #3A4A6A;
  padding: 1rem 1.5rem;
}

header h1 {
  font-size: 3rem;
  font-weight: normal;
  margin-left: 0.5rem;
}

header a {
  color: #000;
  text-decoration: none;
}

section {
  padding: 1.5rem 1rem 1rem 1rem;
}

section h1 {
  margin-bottom: 1rem;
}

hr {
  border: none;
  border-top: solid #1B1B3A 2px;
  margin: 1rem;
}

footer {
  font-size: 0.8rem;
  text-align: center;
  color: hsl(240, 36%, 17%);
}

input {
  border: 1px solid #999;
  border-radius: 0.3rem;
  padding: 0.45rem;
  font-size: 1rem;
}

input[type=submit] {
  padding: 0.5rem 3rem;
  border-radius: 0.3rem;
  background-color: #FF9AB0;
  color: #fff;
  font-weight: bold;
  min-width: 12rem;
  margin: 1rem auto;
}
